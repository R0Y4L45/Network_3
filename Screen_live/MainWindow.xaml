<Window x:Class="Screen_live.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Screen_live"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.15*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="1" Grid.Column="1" Name="btn" Content="ScreenShot" HorizontalAlignment="Center"
                VerticalAlignment="Top" 
                RenderTransformOrigin="-2.817,-0.426" 
                Width="128" Height="33" Click="btn_Click"/>
        <Image Name="img"  Grid.Column="1" Height="auto" Width="auto"/>
    </Grid>
</Window>
